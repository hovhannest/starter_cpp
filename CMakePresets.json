        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-g",
        "CMAKE_C_FLAGS": "-g",
        "CMAKE_EXE_LINKER_FLAGS": "-static"
      },
      "environment": {
        "TZ": "UTC",
        "LC_ALL": "C"
      }
    },
