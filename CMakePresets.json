{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_VERBOSE_MAKEFILE": "ON"
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "linux-x86_64-debug",
      "displayName": "Linux x86_64 Debug",
      "inherits": "base",
      "toolchainFile": "${sourceDir}/cmake/toolchains/linux-x86_64.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-g",
        "CMAKE_C_FLAGS": "-g",
        "CMAKE_EXE_LINKER_FLAGS": "-static"
      },
      "environment": {
        "TZ": "UTC",
        "LC_ALL": "C"
      }
    },
    {
      "name": "linux-x86_64-release",
      "displayName": "Linux x86_64 Release",
      "inherits": "base",
      "toolchainFile": "${sourceDir}/cmake/toolchains/linux-x86_64.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-O3 -DNDEBUG",
        "CMAKE_C_FLAGS": "-O3 -DNDEBUG",
        "CMAKE_EXE_LINKER_FLAGS": "-static -s"
      },
      "environment": {
        "TZ": "UTC",
        "LC_ALL": "C"
      }
    },
    {
      "name": "macos-x86_64-debug",
      "displayName": "macOS x86_64 Debug",
